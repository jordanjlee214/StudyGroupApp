<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroupActivity"
    android:background="@color/darkBackground"
    android:backgroundTint="@color/darkBackground">

    <TextView
        android:id="@+id/test_group_header_background"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/group_menu_header"
        android:padding="8dp"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/right_guide"
        app:layout_constraintHorizontal_weight=".9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/left_guide"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".05"
        />

    <TextView
        android:id="@+id/test_group_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/group_menu_header"
        android:fontFamily="@font/nexa_bold"
        android:padding="8dp"
        android:textColor="@color/mainTextColor"
        android:textSize="18dp"
        android:text="hello"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/test_group_members"
        app:layout_constraintHorizontal_weight=".9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/left_guide"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".05"/>

    <TextView
        android:id="@+id/test_group_members"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:padding="8dp"
        android:text="         12"
        android:textAlignment="viewEnd"
        android:textColor="@color/mainTextColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/right_guide"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".05"
        android:textSize="18dp"
        android:background="@drawable/group_menu_header"
        android:fontFamily="@font/nexa_bold"/>

    <ImageView
        android:id="@+id/membersIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:tint="@color/openGroup"
        app:layout_constraintBottom_toBottomOf="@+id/test_group_members"
        app:layout_constraintStart_toEndOf="@+id/test_group_name"
        app:layout_constraintTop_toTopOf="@+id/test_group_members"
        app:srcCompat="@drawable/groups" />

    <TextView
        android:id="@+id/test_group_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintRight_toRightOf="parent">
    </TextView>

    <TextView
        android:id="@+id/test_group_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintRight_toRightOf="parent">
    </TextView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />




</androidx.constraintlayout.widget.ConstraintLayout>